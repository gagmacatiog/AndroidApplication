<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.georgealbert.queuemobileapplication.queue_list"
    android:weightSum="5">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="2"
        android:layout_weight="2"
        android:layout_height="0dp">

        <TextView
            android:text="000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView2"
            android:textSize="120sp"
            android:layout_weight="1.3"
            android:textColor="@android:color/black"
            android:gravity="center" />

        <TextView
            android:text="@string/queueNumber"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight=".7"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@android:color/white"
            android:background="@drawable/mainpage_header"
            android:id="@+id/textView1"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1"
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:text="@string/currentlyServed"
            android:layout_weight=".33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_see_reservedqueue"
            android:background="@drawable/button_main"
            android:id="@+id/button1"
            android:elevation="10dp"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:cursorVisible="true" />

        <Button
            android:text="@string/extendTime"
            android:layout_weight=".34"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_extend_time"
            android:gravity="center"
            android:background="@drawable/button_main"
            android:textAllCaps="false"
            android:elevation="10dp"
            android:textSize="10sp"
            android:id="@+id/button2" />


        <Button
            android:text="@string/dropQueue"
            android:layout_weight=".33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_drop_queue"
            android:gravity="center"
            android:background="@drawable/button_main"
            android:id="@+id/button3"
            android:elevation="10dp"
            android:textSize="10sp"
            android:textAllCaps="false" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_blue_light"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:layout_height="0dp">

        <TextView
            android:text="Estimated waiting time:"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight=".4"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mainpage_header"
            android:textSize="18sp"
            android:id="@+id/terminal7_transaction" />

        <TextView
            android:text="00:02:45"
            android:layout_weight=".6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView6"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_blue_light"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:weightSum="1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="Please proceed to:"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mainpage_header"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/terminal4_transaction" />

        <TextView
            android:text="Window 2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:textColor="@android:color/black"
            android:id="@+id/textView4"
            android:gravity="center"
            android:textSize="50sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_blue_light"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:weightSum=".5"
        android:layout_weight=".5"
        android:layout_height="0dp"
        android:gravity="center">

        <TextView
            android:text="Cashier"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" />

        <TextView
            android:text="@string/reservedQueue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView77"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@android:color/black"
            android:gravity="center" />

        <TextView
            android:text="120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView777"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
