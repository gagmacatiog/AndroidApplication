<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:background="@color/colorwhitelow2"
    tools:context="com.example.georgealbert.queuemobileapplication.queue_list"
    android:weightSum="7">

        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="-3dp"
        app:cardElevation="3dp"
        android:layout_height="0dp"
        android:layout_weight="1">


            <!--android:layout_marginBottom="10dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:paddingRight="3dp"-->
            <!--android:paddingLeft="25dp"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:paddingTop="5dp"-->
            <!--android:layout_height="?attr/actionBarSize"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="25dp"
                android:paddingRight="3dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight=".65"
                    android:weightSum="1">

                    <TextView
                        android:text="Full name"
                        android:textStyle="bold"
                        android:id="@+id/fullName"
                        android:textColor="@color/black"
                        android:layout_weight=".5"
                        android:gravity="bottom"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:text="Student Id number"
                        android:id="@+id/idNumber"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_weight=".5"
                        android:gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />


                </LinearLayout>

                <Button
                    android:text="Cancel Queue"
                    android:id="@+id/button3"
                    android:textAllCaps="false"
                    android:layout_weight=".35"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_main"
                    android:drawableLeft="@drawable/ic_action_drop_queue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </RelativeLayout>

        </android.support.v7.widget.CardView>

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1" />-->

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="1"
        android:background="@color/colorwhitelow"
        android:paddingRight="3dp"
        android:paddingLeft="25dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="Queue Number"
            android:layout_weight=".5"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="----"
            android:layout_weight=".5"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/queueNumber" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="3"
        android:background="@color/colorwhitelow"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/border_main"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:weightSum="22"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="4"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:layout_alignRight="@+id/cQ"
                    app:srcCompat="@drawable/ic_action_see_reservedqueue_bl"
                    android:id="@+id/button1" />

                <TextView
                    android:text="Current Queue Status for"
                    android:id="@+id/cQ"
                    android:textSize="14sp"
                    android:gravity="center|bottom"
                    android:textColor="@color/black"
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:layout_alignRight="@+id/cQ"
                    app:srcCompat="@drawable/ic_action_extend_time_bl"
                    android:id="@+id/button2" />

            </LinearLayout>

            <TextView
                android:text="Cashier Transaction"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="0dp"
                android:id="@+id/terminalTransaction" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_weight="8"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:weightSum="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Waiting Time"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:layout_weight=".3"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:text="--:--:--"
                        android:gravity="center"
                        android:layout_weight=".7"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/waitingTime" />

                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:weightSum="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Students before you"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight=".3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:text="---"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight=".7"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/beforeYou" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="6"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="Important"
                    android:textColor="@color/homeButtonRed"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="14sp" />

                <TextView
                    android:text="Please allow enough time to complete"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <TextView
                    android:text="your assessment/test if any."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3.5"
        android:layout_weight="2"
        android:background="@color/colorwhitelow"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="Please be at the waiting area when"
            android:textSize="20sp"
            android:gravity="center|bottom"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:textColor="@color/black"/>

        <TextView
            android:text="number is called."
            android:textSize="20sp"
            android:gravity="center|top"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="Updated at 10:30 AM"
                android:id="@+id/UpdateAt"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_alignRight="@+id/UpdateAt"
                android:layout_alignBottom="@+id/UpdateAt"
                android:layout_alignTop="@+id/UpdateAt"
                app:srcCompat="@drawable/ic_action_refresh_bl"
                android:id="@+id/button4" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
