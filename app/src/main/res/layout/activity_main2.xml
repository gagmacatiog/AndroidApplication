<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.georgealbert.queuemobileapplication.Main2Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradientbackgroundcolor"
        android:elevation="4dp"
        android:layout_gravity="bottom"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_action_userlogs"
                android:layout_gravity="right"
                android:layout_marginRight="80dp"
                android:id="@+id/imageView6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_weight="0.1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="80dp"
                app:srcCompat="@drawable/ic_action_usernotification_active"
                android:id="@+id/imageView7"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_menu_add"
                android:id="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/toolbar_layout"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize">

            <ScrollView
                android:orientation="horizontal"
                android:id="@+id/layout_template"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:scrollbars="horizontal"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                
            </ScrollView>

            <FrameLayout
                android:orientation="horizontal"
                android:id="@+id/logs_layout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

            </FrameLayout>

        <FrameLayout
            android:orientation="horizontal"
            android:id="@+id/notification_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhitelow2"
            android:visibility="gone"
            android:layout_marginTop="?attr/actionBarSize"
            android:animateLayoutChanges="true"
            android:scrollbars="none"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </FrameLayout>

        <FrameLayout
            android:orientation="horizontal"
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:background="@color/colorwhitelow2"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ScrollView
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <include layout="@layout/fragment_application_info" />

            </ScrollView>

        </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gradientbackgroundcolor"
                android:elevation="4dp"
                android:layout_gravity="top"
                android:showAsAction="always"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/useplogo"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/imageView3"/>

                    <TextView
                        android:text="Thesis Project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:id="@+id/textView4"
                        android:paddingLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView3"
                        android:layout_toEndOf="@+id/imageView3" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

    </FrameLayout>

</RelativeLayout>
