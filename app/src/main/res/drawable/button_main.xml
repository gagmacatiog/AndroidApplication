<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue2" />
            <stroke
                android:width="1dp"
                android:color="@color/colorAccent" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>

            <gradient
                android:startColor="@color/blue2"
                android:endColor="@color/blue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/homeButtonRed" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="10dp" />


        </shape>
    </item>
</selector>